title {label: "Scalable App ERD (condensed)", size: "20"}

# Entities

[Member] {bgcolor: "#d0e0d0"}
    *member_id {label: "varchar, not null"}
    email {label: "varchar, not null, unique"}
    password_hash {label: "varchar, not null"}
    first_name {label: "varchar, not null"}
    last_name {label: "varchar, not null"}
    date_of_birth {label: "date"}
    creation_time {label: "datetime"}
    last_login {label: "datetime"}

[User] {bgcolor: "#daeada"}
    *+user_id {label: "varchar, not null"}

[Admin] {bgcolor: "#dbebdb"}
    *+admin_id {label: "varchar, not null"}

[Post]
    +id
    *user_id
    post_text
    hashtags
    *user_tags
    creation_time
    update_time

[Comment]
    +id
    *user_id
    comment_text
    *user_tags
    creation_time
    update_time

[Message]
    +id
    message_text
    *thread_id
    creation_time

[Message_Thread]
    +id
    *message_users

[Message_Thread_Users]
    +*thread_id
    +*user_id

